@using PrivateLibrary.Util.Enums.Security.Roles
@model PrivateLibrary.Models.Books.BookModel

<div class="myForm">
	<div class="card mb-3" style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="https://loremflickr.com/320/240" class="img-fluid rounded-start" alt="...">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">@Model?.Name</h5>
					<p class="card-text">@Model?.Direction?.Name</p>
					<p class="card-text">@Model?.Year</p>
					<p class="card-text"><small class="text-muted">@Model?.Author?.LastName @Model?.Author?.FirstName @Model?.Author?.MiddleName</small></p>
				</div>
				<div class="card-footer">
					<form method="post" asp-controller="CustomerBooks" asp-action="RemoveBookForCurrentSessionCustomer" asp-route-bookId="@Model?.Id">
						<button type="submit" class="btn btn-danger">Remove</button>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>

@section Styles
{
<link rel="stylesheet" href="~/src/css/CenteringForm.css" />
}
